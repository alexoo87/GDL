EPS = 0.0001



!----------------------------------------------------------------------------------------------------
!	Representation
!----------------------------------------------------------------------------------------------------
resol HM_3D_resol


!----------------------------------------------------------------------------------------------------
!	Shape
!----------------------------------------------------------------------------------------------------
pen		HM_3D_pen

	!	Wire
	!----------------------------------------------------------------------------------------------------
	material 	HM_matWire

	mR = HM_Wire_R

	!	Wire Group
	group	"gWire"
		sphere	mR
	endgroup

	!	Sweep Group
	add	x1,	y1,	z1
		_dx = (x2 - x1)
		_dy = (y2 - y1)
		_dz = (z2 - z1)

		if	GLOB_VIEW_TYPE # 2	then
			if	not(GLOB_FEEDBACK_MODE)	then
				placegroup	sweepgroup{3}("gWire",	_dx,	_dy,	_dz,	HM_3D_pen,	HM_matWire,	HM_matWire,	1)
			else
				lin_	0,	0,	0,	_dx,	_dy,	_dz
			endif
		endif
	del 1

	killgroup	"gWire"


!======================================================================================================
end
